# Environment Variables Example
# Copy this file to .env and update with your values

# Database Configuration
DB_URL=jdbc:sqlserver://localhost:1433;databaseName=OnlineLibrary;encrypt=false;trustServerCertificate=true
DB_USERNAME=sa
DB_PASSWORD=YourPassword123

# JWT Configuration (Optional - has defaults)
# JWT_SECRET=OnlineLibrarySecretKeyForJWTTokenGeneration2024!
# JWT_EXPIRATION=86400000

# Server Configuration (Optional - has defaults)
# SERVER_PORT=8080

# Storage Configuration (Optional - has defaults)
# STORAGE_BASE_PATH=storage
# STORAGE_BOOKS_PATH=storage/books

# Example for different environments:

# Local Development (default)
# DB_URL=jdbc:sqlserver://localhost:1433;databaseName=OnlineLibrary;encrypt=false;trustServerCertificate=true

# Docker Development  
# DB_URL=jdbc:sqlserver://host.docker.internal:1433;databaseName=OnlineLibrary;encrypt=false;trustServerCertificate=true

# Production/Staging
# DB_URL=jdbc:sqlserver://your-production-server:1433;databaseName=OnlineLibrary;encrypt=true
# DB_USERNAME=your-prod-user
# DB_PASSWORD=your-secure-password
